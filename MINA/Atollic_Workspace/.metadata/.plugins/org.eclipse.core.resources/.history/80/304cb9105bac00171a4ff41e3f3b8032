/* Includes */
#include <stdio.h>
#include <inttypes.h> // Macro for parsing uint8_t
#include "stm32f4xx.h"
#include "nucleo_usart.h"
#include "mina_shield.h"
#include "rgb_led_driver.h"

/* Private macro */
/* Private variables */
/* Private function prototypes */
/* Private functions */

/**
**===========================================================================
**
**  Abstract: main program
**
**===========================================================================
*/
int main(void)
{
  /**
  *  IMPORTANT NOTE!
  *  The symbol VECT_TAB_SRAM needs to be defined when building the project
  *  if code has been located to RAM and interrupts are used. 
  *  Otherwise the interrupt table located in flash will be used.
  *  See also the <system_*.c> file and how the SystemInit() function updates 
  *  SCB->VTOR register.  
  *  E.g.  SCB->VTOR = 0x20000000;  
  */

  // USART Initialization
  Usart2Init(0);

  // zrusit bufferovani vystupu i vstupu
  setvbuf(stdout, NULL, _IONBF, 0);
  setvbuf(stdin, NULL, _IONBF, 0);

  SystemCoreClockUpdate();
  //SysTick_Config(SystemCoreClock / 1000);

  // Joystick Initialization
  Nucleo_SetPinGPIO(JOY_UP, ioPortInputFloat);
  Nucleo_SetPinGPIO(JOY_DOWN, ioPortInputFloat);
  Nucleo_SetPinGPIO(JOY_LEFT, ioPortInputFloat);
  Nucleo_SetPinGPIO(JOY_RIGHT, ioPortInputFloat);
  Nucleo_SetPinGPIO(JOY_PUSH, ioPortInputFloat);

  // RGB led Initialization
  initRGB_LED_PWM();
  set_RGB_LED_PWM(0,0,0);

  unsigned short joy_combination = 0;
  char buff [100];

  uint32_t r,g,b;
  /* Infinite loop */
  while (1)
  {
    // read Joystick combination
    joy_combination = readJoystick();

    if (joy_combination != 0)   // Joystick was used
    {
      if ( (joy_combination & 1 ) != 0)
      {
        sprintf(buff, "Pushed, ");
        Usart2String(buff);
      }
      if ( (joy_combination & (1 << 1) ) != 0)
        printf("Right, ");
      if ( (joy_combination & (1 << 2) ) != 0)
        printf("Left, ");
      if ( (joy_combination & (1 << 3) ) != 0)
        printf("Down, ");
      if ( (joy_combination & (1 << 4) ) != 0)
        printf("Up, ");

      printf("\r\n");
    }

    if (IsUsart2Recv())
    {
      Usart2RecvLine(buff);
      Usart2String(buff);
      sscanf(buff, "%lu %lu %lu", &r, &g, &b);
      set_RGB_LED_PWM(r,g,b);


    }
  }
}
