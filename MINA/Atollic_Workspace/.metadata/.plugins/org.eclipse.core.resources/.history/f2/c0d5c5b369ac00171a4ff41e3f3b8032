/* Includes */
#include "stm32f4xx.h"
#include <stdio.h>
#include <inttypes.h> // Macro for parsing uint32_t
#include "mina_shield.h"
#include "nucleo_core.h"
#include "mbed_shield_lcd.h"        // include public functions

#include "mandelbrot.h"

/* Private macro */
/* Private variables */
/* Private function prototypes */
/* Private functions */

volatile uint32_t _ticks = 0;
void SysTick_Handler(void)
{
_ticks++;
}
/**
**===========================================================================
**
**  Abstract: main program
**
**===========================================================================
*/
int main(void)
{
  /**
  *  IMPORTANT NOTE!
  *  The symbol VECT_TAB_SRAM needs to be defined when building the project
  *  if code has been located to RAM and interrupts are used. 
  *  Otherwise the interrupt table located in flash will be used.
  *  See also the <system_*.c> file and how the SystemInit() function updates 
  *  SCB->VTOR register.  
  *  E.g.  SCB->VTOR = 0x20000000;  
  */

  SystemCoreClockUpdate();
  SysTick_Config(SystemCoreClock / 1000);

  Nucleo_SetPinGPIO(JOY_PUSH, ioPortInputFloat);

  // configure LCD display
  if (!MBED_LCD_init())             // check success
  {
    while(1)                        // defined stop when it fails
      ;
  }

  // Clear LCD buffer and send it to display
  MBED_LCD_InitVideoRam(0x00);      // fill content with 0 = clear memory buffer
  MBED_LCD_VideoRam2LCD();          // move changes in video buffer to LCD

  char buf[128];  //LCD string buffer
  uint32_t last_tick = 0;
  uint8_t joy_state = 0;
  /* Infinite loop */
  while (1)
  {
    joy_state = readJoystick();
	  if (joy_state != 0)
    {
	    if (joy_state == left_pressed)
        centerX -= 0.1f / zoomX;
      if (joy_state == right_pressed)
        centerX += 0.1f / zoomX;
      if (joy_state == up_pressed)
        centerY -= 0.1f / zoomY;
      if (joy_state == down_pressed)
        centerY += 0.1f / zoomY;
      if (joy_state == push_pressed)
      {
        zoomX *= 1.5f;
        zoomY *= 1.5f;
	    }

      CalculateMandel();
    }
  }
}
